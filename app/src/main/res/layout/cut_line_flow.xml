<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_see_more"
        android:paddingLeft="@dimen/material_drawer_account_header_compact"
        android:paddingRight="@dimen/material_drawer_account_header_compact"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_drawer_account_header_dropdown">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@color/grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@color/grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_see_less"
        android:paddingLeft="@dimen/material_drawer_account_header_compact"
        android:paddingRight="@dimen/material_drawer_account_header_compact"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/material_drawer_account_header_dropdown">
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@color/grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/see_less"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:background="@color/grey"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            />
    </LinearLayout>
</LinearLayout>