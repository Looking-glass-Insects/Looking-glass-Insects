<?xml version="1.0" encoding="utf-8"?>
<com.example.heyong.exercisesbase.CustomView.MySlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingPanelLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--left view-->
    <LinearLayout
        android:id="@+id/left_view_container"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/externalFileRule">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="
            在SD卡根目录加入文件question.txt\n
            内容如demo.txt显示\n
            规则为{标识符|问题|答案}\n
            关于标识符，字符A代表选择题，B代表简答题\n
            导入成功后文件名会被改为_question.txt\n
            原有_question.txt会被覆盖\n
            请勿重复导入\n
            以下为根目录下的txt文件，支持点击导入"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/founded_files"
                android:scrollbars="none">
            </ListView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textAlignment="center"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#dddddd"
            android:orientation="vertical">
            <!--this ia a cut line-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/que_style_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/new_note_icon"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新建试卷模板"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"
            android:orientation="vertical">
            <!--this ia a cut line-->
        </LinearLayout>
        <LinearLayout
            android:id="@+id/que_savedtyle_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/new_note_icon"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/model_relativeLayout"
                android:layout_weight="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="模板库"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#dddddd"
            android:orientation="vertical">
            <!--this ia a cut line-->
        </LinearLayout>



        <!--隐藏布局 管理数据库布局-->
        <LinearLayout
            android:id="@+id/manage_layout"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/manage_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/new_note_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="试题库"
                        android:layout_gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:orientation="vertical">
                <!--this ia a cut line-->
            </LinearLayout>
            <LinearLayout
                android:id="@+id/externalFile_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/new_note_icon"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="导入外部文件"
                        android:layout_gravity="right"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="#dddddd"
            android:orientation="vertical">
            <!--this ia a cut line-->
        </LinearLayout>
    </LinearLayout>

    <!---cneter view-->
    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <!--顶部-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试题预览"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                     />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:orientation="vertical">
                <!--this ia a cut line-->
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/main_viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.00">
                <!-- here are fragments-->

            </android.support.v4.view.ViewPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:orientation="vertical">
                <!--this ia a cut line-->
            </LinearLayout>
            <!-- 底部-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relativelayout_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/back_forward"
                        android:id="@+id/imageView"
                        android:layout_above="@+id/textView4" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="10dp"
                        android:text="回首页"
                        android:textSize="8dp"
                        android:layout_gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/imageView"
                        android:id="@+id/textView4" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativelayout_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/output"
                        android:id="@+id/imageView3"
                        android:layout_above="@+id/textView5" />
                    <TextView
                        android:gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="10dp"
                        android:text="导出"
                        android:textSize="8dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/imageView3"
                        android:id="@+id/textView5" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.example.heyong.exercisesbase.CustomView.MySlidingPaneLayout>