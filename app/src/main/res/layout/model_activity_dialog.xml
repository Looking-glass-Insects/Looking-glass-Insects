<?xml version="1.0" encoding="utf-8"?>

<com.example.heyong.exercisesbase.CustomView.RightSlideCloseFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/model_dialog_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <com.example.heyong.exercisesbase.dslv.DragSortListView
            android:id="@+id/model_dialog_dslv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            dslv:click_remove_id="@id/click_remove"
            dslv:drag_enabled="true"
            dslv:drag_handle_id="@id/drag_handle"
            dslv:float_alpha="0.6"
            dslv:remove_enabled="true"
            dslv:remove_mode="clickRemove"
            android:layout_weight="1">

        </com.example.heyong.exercisesbase.dslv.DragSortListView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/model_dialog_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存并预览"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/model_dialog_sheet_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_gravity="bottom"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@color/paleturquoise"
                android:text="问题:"
                android:textSize="20dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/arrow_imageView" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/save_48px"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/arrow_imageView"
                android:background="@color/paleturquoise"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/model_dialog_questionText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/skyblue"
            android:layout_weight="3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="答案:"
            android:background="@color/paleturquoise"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/model_dialog_answerText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/my_blue_light"
            android:layout_weight="3"/>
    </LinearLayout>
</com.example.heyong.exercisesbase.CustomView.RightSlideCloseFrameLayout>